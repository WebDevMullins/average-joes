<section class="h-screen">
	<div class='py-8 px-4 mx-auto max-w-screen-xl h-screen justify-center lg:py-16 lg:px-6'>
		<div class='mx-auto max-w-screen-md text-center mb-8 lg:mb-12'>
			<h2 class='mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white'>Train Hard, Live Better</h2>
		</div>
		<div class='space-y-8 lg:grid lg:grid-cols-3 sm:gap-6 xl:gap-10 lg:space-y-0'>
			{{#each tier as |tier|}}
				<!-- Pricing Card -->
				<div
					class='flex flex-col p-6 mx-auto max-w-lg text-center text-gray-900 bg-gray-50 rounded-lg border border-gray-100 shadow dark:border-gray-600 xl:p-8 dark:bg-gray-800 dark:text-white'
				>
					<h3 class='text-3xl font-bold'>{{tier.name}}</h3>
					<div class='flex justify-center items-baseline my-8'>
						<span class='mr-2 text-5xl font-extrabold'>${{tier.monthlyFee}}</span>
						<span class='text-gray-500 dark:text-gray-400'>/month</span>
					</div>
					<!-- List -->
					<ul role='list' class='mb-8 space-y-4 text-left'>
						<li class='flex items-center space-x-3'>
							<!-- Icon -->
							<svg
								class='flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400'
								fill='currentColor'
								viewBox='0 0 20 20'
								xmlns='http://www.w3.org/2000/svg'
							><path
									fill-rule='evenodd'
									d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
									clip-rule='evenodd'
								></path></svg>
							<span>{{tier.benefits}}</span>
						</li>
						<li class='flex items-center space-x-3'>
							<!-- Icon -->
							<svg
								class='flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400'
								fill='currentColor'
								viewBox='0 0 20 20'
								xmlns='http://www.w3.org/2000/svg'
							><path
									fill-rule='evenodd'
									d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
									clip-rule='evenodd'
								></path></svg>
							<span>{{tier.trainer.specialty_classes}}</span>
						</li>
						<li class='flex items-center space-x-3'>
							<!-- Icon -->
							<svg
								class='flex-shrink-0 w-5 h-5 text-green-500 dark:text-green-400'
								fill='currentColor'
								viewBox='0 0 20 20'
								xmlns='http://www.w3.org/2000/svg'
							><path
									fill-rule='evenodd'
									d='M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z'
									clip-rule='evenodd'
								></path></svg>
							<span>Trainer: <span class='font-bold'>{{tier.trainer.f_name}} {{tier.trainer.l_name}}</span></span>
						</li>
					</ul>
					{{#unless ../is_member}}
						<a
							href='/membership'
							class='text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:text-white dark:focus:ring-primary-900'
						>Get started today!</a>
					{{/unless}}
				</div>
			{{/each}}
		</div>
	</div>
</section>