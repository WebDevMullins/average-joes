<section class='flex flex-col items-center px-6 py-8 mx-auto md:h-screen max-w-screen-xl lg:py-16'>
	<h2 class='pb-8 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white'>Member Profile</h2>
	<div class='md:flex md:space-x-2'>

		{{! Member Card }}
		<div
			class='flex min-w-fit bg-gray-50 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 mb-2 lg:1/3'
		>
			<div class='flex flex-col items-left py-10 px-6'>
				<div class='flex items-center'>
					<img class='w-20 h-20 rounded-3xl shadow-lg' src='/images/icons/member.png' alt='Profile Image' />
					<div class='px-6 flex flex-col'>
						<h1 class='text-xl font-medium text-gray-900 dark:text-white'>{{f_name}} {{l_name}}</h1>
						<div class='text-md text-gray-500 dark:text-gray-400'>{{user.name}}</div>
					</div>
				</div>
				<div>
					<div class='pt-8'>
						<div class='text-sm text-gray-500 dark:text-gray-400'>Email</div>
						<a href='mailto:{{email}}'>{{email}}</a>
					</div>
					<div class='pt-4'>
						<div class='text-sm text-gray-500 dark:text-gray-400'>Home Address</div>
						<p>{{address}}</p>
						<p>{{city}}, {{state}}</p>
					</div>
					<div class='pt-4'>
						<div class='text-sm text-gray-500 dark:text-gray-400'>Phone Number</div>
						<p>{{phone}}</p>
					</div>
					<div class='pt-4'>
						<div class='text-sm text-gray-500 dark:text-gray-400'>Birthday</div>
						<p>{{format_dob dob}}</p>
					</div>
				</div>
			</div>
		</div>

		{{! Right Section }}
		<div class='flex flex-col mb-2 lg:w-2/3'>
			<!-- Tier Card -->
			<div
				class='flex w-full mb-2 bg-gray-50 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700'
			>
				<div class='flex flex-col items-left py-10 px-6'>
					<div class='flex items-center'>
						<img class='w-20 h-20 rounded-3xl shadow-lg' src='/images/icons/tier.png' alt='Profile Image' />
						<div class='px-6 flex flex-col'>
							<h1 class='text-xl font-medium text-gray-900 dark:text-white'>{{tier.name}}</h1>
							<div class='text-md text-gray-500 dark:text-gray-400'>Tier</div>
						</div>
					</div>
					<div class='flex items-center py-8 space-x-8'>
						<div class='flex flex-col'>
							<div class='text-sm text-gray-500 dark:text-gray-400'>Plan</div>
							<p>{{plan.name}}</p>
						</div>
						<div class='flex flex-col'>
							<div class='text-sm text-gray-500 dark:text-gray-400'>Price per month</div>
							<p>${{tier.monthlyFee}}</p>
						</div>
					</div>
				</div>
			</div>

			{{! Trainer Card }}
			<div class='flex w-full bg-gray-50 border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700'>
				<div class='flex flex-col items-left py-10 px-6'>
					<div class='flex items-center'>
						<img class='w-20 h-20 rounded-3xl shadow-lg' src='/images/icons/trainer.png' alt='Profile Image' />
						<div class='px-6 flex flex-col'>
							<h1 class='text-xl font-medium text-gray-900 dark:text-white'>{{tier.trainer.f_name}}
								{{tier.trainer.l_name}}</h1>
							<div class='text-md text-gray-500 dark:text-gray-400'>Trainer</div>
						</div>
					</div>
					<div>
						<div class='pt-8'>
							<div class='text-sm text-gray-500 dark:text-gray-400'>Specialty Classes</div>
							<p>{{tier.trainer.specialty_classes}}</p>
						</div>
						<div class='pt-4'>
							<div class='text-sm text-gray-500 dark:text-gray-400'>Certifications</div>
							<p>{{tier.trainer.certifications}}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>