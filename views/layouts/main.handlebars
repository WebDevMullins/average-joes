<html lang='en' class='dark'>

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Average Joe's 2.0</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="">
    <header class="header flex flex-row justify-between">
      <h1>Average Joe's 2.0</h1>
      <nav class="navbar flex flex-row w-96 ">
        <a class="home" href="/">HOME</a>
        {{#if loggedIn}}
         <button id="logout" class="btn-no-style">Logout</button>
        {{else}}
        <a class="join" href="/join">JOIN</a>
        {{/if}}
        <a class="classes" href="/classes">CLASSES</a>
        <a class="free_pass" href="/free-pass">FREE PASS</a>
      </nav>
    </header>
    <main>
      {{{body}}}
    </main>
    {{#if loggedIn}}
    <script src="/js/logout.js"></script>
    {{/if}}
    <footer class="grid grid-cols-3">
      <div class="home"></div>
      <div class="join"></div>
      <div class="policy"></div>
    </footer>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.1.1/flowbite.min.js"
    ></script>
  </body>
</html>
